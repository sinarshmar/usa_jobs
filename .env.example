# Development Environment Configuration Template
# Copy this file to .env and replace with your actual values

# ====================
# USAJobs API Configuration
# ====================
# Get your API key from: https://developer.usajobs.gov/APIRequest
USAJOBS_API_KEY=your-api-key-here
USAJOBS_API_URL=https://data.usajobs.gov/api/search

# ====================
# Search Parameters
# ====================
DEFAULT_LOCATION=Chicago
KEYWORD="data engineering"

# ====================
# Database Configuration (Local Development)
# ====================
# Default PostgreSQL connection for Docker Compose setup
DATABASE_URL=postgresql://postgres:password@localhost:5432/usa_jobs
DB_HOST=localhost
DB_PORT=5432
DB_NAME=usa_jobs
DB_USER=postgres
DB_PASSWORD=password

# ====================
# Logging Configuration
# ====================
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ====================
# API Performance Settings
# ====================
DEFAULT_PAGE_SIZE=100        # USAJobs API maximum per page
MAX_PAGES=10                 # Prevent runaway pagination
MAX_RETRIES=3                # Balance between resilience and execution time

# ====================
# Rate Limiting & Timeouts
# ====================
REQUEST_TIMEOUT=30            # seconds for API timeout
MIN_REQUEST_INTERVAL=0.5     # seconds between API calls (be respectful)
INITIAL_RETRY_DELAY=1        # seconds for first retry
MAX_RETRY_DELAY=60           # maximum seconds for retry delay

# ====================
# Database Performance
# ====================
BATCH_COMMIT_SIZE=100        # Commit every N records for large datasets

# ====================
# Parallel Processing
# ====================
# Keep disabled for small datasets (< 100 jobs)
ENABLE_PARALLEL=false        # Set to true for large datasets
MAX_WORKERS=1                # Number of parallel workers if enabled

# ====================
# Feature Flags (Development Testing)
# ====================
ENABLE_SALARY_ANALYSIS=false
ENABLE_LOCATION_STATS=false
DRY_RUN_MODE=false          # Set to true to test without database writes